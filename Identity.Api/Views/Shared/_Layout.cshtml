<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="Content-Security-Policy" content="default-src 'self' https://fonts.googleapis.com https://fonts.gstatic.com  https://unpkg.com 'unsafe-inline' 'unsafe-hashes';connect-src 'self' https://nominatim.openstreetmap.org;script-src 'self' https://unpkg.com 'unsafe-inline' 'unsafe-eval';img-src 'self' https://a.tile.osm.org https://b.tile.osm.org https://c.tile.osm.org;">
    <title>Medecin Manager Identity</title>
    <link rel="icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="shortcut icon" type="image/x-icon" href="~/favicon.ico" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;600;700&display=swap" rel="stylesheet" />
    <environment names="Development">
        <link href="~/css/bootstrap.css" rel="stylesheet" />
        <link href="~/css/bootstrap-icons.css" rel="stylesheet" />
        <link href="~/css/owl.carousel.min.css" rel="stylesheet" />
        <link href="~/css/owl.theme.default.min.css" rel="stylesheet" />
        <link href="~/css/template.css" rel="stylesheet" />
    </environment>
    <environment names="Staging,Production">
        <link href="~/css/bootstrap.min.css" rel="stylesheet" />
        <link href="~/css/bootstrap-icons.css" rel="stylesheet" />
        <link href="~/css/owl.carousel.min.css" rel="stylesheet" />
        <link href="~/css/owl.theme.default.min.css" rel="stylesheet" />
        <link href="~/css/template.css" rel="stylesheet" />
    </environment>
</head>
<body id="top">

    <main>

        <nav class="navbar navbar-expand-lg bg-light fixed-top shadow-lg">
            <div class="container">
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav mx-auto">

                        <a class="navbar-brand d-none d-lg-block" asp-controller="Home" asp-action="Index">
                            <img src="~/images/logo.png" />Identity
                        </a>
                    </ul>
                </div>

            </div>
        </nav>


        @RenderBody()
    </main>

    <footer class="site-footer section-padding" id="contact">
        <div class="container">
            <ul class="social-icon">
                <li><a href="#" class="social-icon-link bi-facebook"></a></li>

                <li><a href="#" class="social-icon-link bi-twitter"></a></li>

                <li><a href="#" class="social-icon-link bi-instagram"></a></li>

                <li><a href="#" class="social-icon-link bi-youtube"></a></li>
            </ul>

            <div>
                <p class="copyright-text">
                    Copyright © Medecin Manager 2022
                </p>
            </div>
        </div>
    </footer>

    <!-- JAVASCRIPT FILES -->
    <script src="~/js/jquery.min.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/owl.carousel.min.js"></script>
    <script src="~/js/scrollspy.min.js"></script>
    <script src="~/js/custom.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
